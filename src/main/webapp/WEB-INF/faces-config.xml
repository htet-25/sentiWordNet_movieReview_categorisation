<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">
	<application>

		<action-listener>org.primefaces.application.DialogActionListener</action-listener>
		<navigation-handler>org.primefaces.application.DialogNavigationHandler</navigation-handler>
		<view-handler>org.primefaces.application.DialogViewHandler</view-handler>
		<message-bundle>MESSAGES</message-bundle>
		<resource-bundle>
			<base-name>MESSAGES</base-name>
			<var>label</var>
		</resource-bundle>
	</application>
	<converter>
		<converter-for-class>java.lang.Enum</converter-for-class>
		<converter-class>javax.faces.convert.EnumConverter</converter-class>
	</converter>
	<factory>
		<exception-handler-factory>org.omnifaces.exceptionhandler.FullAjaxExceptionHandlerFactory</exception-handler-factory>
	</factory>
	<navigation-rule>
		<from-view-id>/*</from-view-id>
		<navigation-case>
			<from-outcome>dashboard</from-outcome>
			<to-view-id>/view/home.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>home</from-outcome>
			<to-view-id>/view/home.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>/view/login.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>userRegister</from-outcome>
			<to-view-id>/view/user/userRegistration.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>userSearch</from-outcome>
			<to-view-id>/view/user/userSearch.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>userSearch</from-outcome>
			<to-view-id>/view/user/userSearch.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		
			<navigation-case>
				<from-outcome>UserUpdate</from-outcome>
				<to-view-id>/view/user/userRegistrationUpdate.xhtml</to-view-id>
				<redirect />
			</navigation-case>
			
			<navigation-case>
				<from-outcome>PasswordChange</from-outcome>
				<to-view-id>/view/user/passwordChange.xhtml</to-view-id>
				<redirect />
			</navigation-case>
			
			<navigation-case>
				<from-outcome>userDetail</from-outcome>
				<to-view-id>/view/user/userDetailView.xhtml</to-view-id>
				<redirect />
			</navigation-case>
		
	
	</navigation-rule>
</faces-config>